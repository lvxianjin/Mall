    <resultMap id="partList" type="com.qdlg.model.Part">
        <!--执行sql语句返回的结果集与实体类对应-->
        <id column="id" jdbcType="INTEGER" property="id"></id>
        <result column="color" jdbcType="VARCHAR" property="color"></result>
        <result column="img_src" jdbcType="VARCHAR" property="img_src"></result>
        <result column="now_price" jdbcType="FLOAT" property="now_price"></result>
        <result column="old_price" jdbcType="FLOAT" property="old_price"></result>
        <result column="amount" jdbcType="INTEGER" property="amount"></result>
        <result column="title" jdbcType="VARCHAR" property="title"></result>
        <result column="description" jdbcType="VARCHAR" property="description"></result>
        <result column="addtime" jdbcType="TIMESTAMP" property="addtime"></result>
    </resultMap>
    <select id="getPartList" resultMap="partList">
        select * from part where 1=1 order by addtime desc
    </select>
    <select id="getPartListById" parameterType="java.lang.Integer" resultType="com.qdlg.model.Part">
        select * from part where id=#{id}
    </select>
    <select id="getPartListByTitle" parameterType="java.lang.String" resultMap="partList">
        select * from part
        <where>
            <if test="title != null and !&quot;&quot;.equals(title.trim())">
                title like '%' #{title} '%'
            </if>
        </where>
    </select>
    <resultMap id="newgoodsList" type="com.qdlg.model.NewGoods">
        <!--执行sql语句返回的结果集与实体类对应-->
        <id column="id" jdbcType="INTEGER" property="id"></id>
        <result column="img_src" jdbcType="VARCHAR" property="img_src"></result>
        <result column="type" jdbcType="VARCHAR" property="type"></result>
        <result column="addtime" jdbcType="TIMESTAMP" property="addtime"></result>
    </resultMap>
    <select id="getNewGoodsList" resultMap="newgoodsList">
        select * from new_goods where 1=1 order by addtime desc
    </select>

